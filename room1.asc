// room script file

function hGlowingOrb_Look(Hotspot *thisHotspot, CursorMode mode)
{
  player.Say("It is the second best glowing orb that I've seen today.");
}

function room_LeaveLeft()
{
cEgo.ChangeRoom(2, 302, 182, eDirectionDownLeft);
}


function oCoins_Interact(Object *theObject, CursorMode mode)
{
cEgo.Walk(80, 134, eBlock, eWalkableAreas);
cEgo.FaceDirection(eDirectionDown);
cEgo.LockView(3);
cEgo.Animate(0, 5, eOnce, eBlock, eBackwards);
cEgo.UnlockView();
oCoins.Visible=false;
Display("You picked up some coins.");
cEgo.AddInventory(iCoins);
aKnockhigh.Play();
}

function hGlowingOrb_UseInv(Hotspot *theHotspot, CursorMode mode)
{
if (cEgo.ActiveInventory == iSnakewine)
 cEgo.Walk(166, 142, eBlock, eWalkableAreas);
 cEgo.FaceDirection(eDirectionUp);
 Display("You offered the snake wine to the orb and it blessed your dagger. YOU WIN");
 aKnockhigh.Play();
 cEgo.LoseInventory(iSnakewine);
}


function room_AfterFadeIn()
{
oTorch.SetView(9, 10);
oTorch.Animate (0,  10,eRepeat, eBlock);
}
