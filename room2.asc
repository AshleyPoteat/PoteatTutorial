// room script file


function room_LeaveLeft()
{
cEgo.ChangeRoom(3, 308, 190, eDirectionDownLeft);
}


function iCobra_Look(Object *theObject, CursorMode mode)
{
Display("That cobra looks angry...I better not mess with it.");
cEgo.Say("Scary");
}


function room_LeaveRight()
{
cEgo.ChangeRoom(1, 54, 139, eDirectionDownRight);
}


function oCobra_UseInv(Object *theObject, CursorMode mode)
{
if (cEgo.ActiveInventory == iPill)
Display("Poisoned cobra.");
cEgo.LoseInventory(iPill);
cEgo.AddInventory(iCobra);
aKnockhigh.Play();
oCobra.Visible=false;
}


