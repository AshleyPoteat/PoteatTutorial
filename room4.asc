// room script file

function oWine_Look(Object *theObject, CursorMode mode)
{
Display("Rice wine.");
cEgo.Say("Smells strong.");
}

function oWine_Interact(Object *theObject, CursorMode mode)
{
cEgo.Walk(276, 167, eBlock, eWalkableAreas);
cEgo.FaceDirection(eDirectionDown);
cEgo.LockView(3);
cEgo.Animate(0, 5, eOnce, eBlock, eBackwards);
cEgo.UnlockView();
oWine.Visible=false;
Display("You picked up some wine.");
cEgo.AddInventory(iBottle);
aKnockhigh.Play();
}

function room_LeaveRight()
{
cEgo.ChangeRoom(3, 18, 176, eDirectionDownRight);
}

function oGift01_Interact(Object *theObject, CursorMode mode)
{
  WalkToObjectAndPickup(theObject);
  numGifts++;
  UpdateMusic();
  cEgo.AddInventory(oWine);
  String message = String.Format("You have: %d Gifts",  numGifts);
  cEgo.Say(message);
}

