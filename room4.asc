// room script file

function oWine_Look(Object *theObject, CursorMode mode)
{
Display("A bottle of rice wine.");
cEgo.Say("It smells very strong.");
}

function oWine_Interact(Object *theObject, CursorMode mode)
{
cEgo.Walk(276, 167, eBlock, eWalkableAreas);
cEgo.FaceDirection(eDirectionDown);
cEgo.LockView(3);
cEgo.Animate(0, 5, eOnce, eBlock, eBackwards);
cEgo.UnlockView();
oWine.Visible=false;
Display("You picked up some wine.");
cEgo.AddInventory(iBottle);
}